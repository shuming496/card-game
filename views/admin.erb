<div class="d-flex justify-content-center flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 pt-3">
    <h1 class="h2">Dashboard</h1>
</div>

<ul class="nav">
    <li class="nav-item">
	<a class="nav-link active" id="formSubmit" href="#">删除</a>
    </li>
    <li class="nav-item">
	<a class="nav-link" href="/admin/user/add">新增</a>
    </li>
</ul>

<div class="table-responsive">
    <form id="userIdForm" action="/admin/user/delete" method="POST">
	<table class="table table-striped table-sm">
            <thead>
		<tr>
		    <th>#</th>
		    <th>用户名</th>
		    <th>性别</th>
		    <th>角色</th>
		</tr>
            </thead>
            <tbody>
		<% unless @users.empty? %>
		    <% @users.each do |user| %>
			<tr>
			    <td>
				<% unless user[0] == 1 %>
				    <div class="form-check">
					<input class="form-check-input position-static blank-checkbox" type="checkbox" name="user_id" value="<%= user[0] %>" aria-label="...">
				    </div>
				<% end %>
			    </td>
			    <td><%= user[1]%></td>
			    <td><%= user[2]%></td>
			    <td><%= user[3]%></td>
			    <td>
				<% unless user[0] == 1 %>
				    <a href="/admin/user/<%= user[0] %>/edit">修改</a>
				<% end %>
			    </td>
			</tr>
		    <% end %>
		<% end %>
            </tbody>

	</table>
    </form>
</div>
