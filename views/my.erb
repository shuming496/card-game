<div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 col-lg-6">
	<div class="card">
	    <div class="card-header">
		我的信息
	    </div>
	    <div class="card-body">
		<p class="card-text">禅院草: <%= @user[0]%> </p>
		<p class="card-text">性别:
		    <% if @user[1] == "male" %>
			仙子
		    <% else %>
			仙女
		    <% end %>
		</p>
		<p class="card-text">状态:
		    <% if @user[2] == -1 then %>
			待约
		    <% elsif @user[2] == 0 then %>
			初始
		    <% else %>
			有约
		    <% end %>
		</p>
		<a href="/logout" class="btn btn-primary">退出</a>		
	    </div>
	</div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 col-lg-6">
	<div id="accordion">
	    <div class="card" style="margin-bottom:77px">
		<div class="card-header" id="headingOne">
		    <h5 class="mb-0">
			<button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
			    修改信息
			</button>
		    </h5>
		</div>

		<% if @show_collapse %>
		    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
		<% else %>
		    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">			
		<% end %>
		    <div class="card-body">
			<form  action="/my/update" method="POST">
			    <div class="form-group">
				<input type="text" class="form-control" name="username" id="inputUsername" value="<%= @user[0]%>" aria-describedby="emailHelp" placeholder="用户名" required>
			    </div>
			    <div class="form-group">
				<input type="password" class="form-control" name="password1" id="inputPassword1" placeholder="密码" required>
			    </div>
			    <div class="form-group">
				<input type="password" class="form-control" name="password2" id="inputPassword2" placeholder="确认密码" required>
			    </div>
			    <div class="form-group">
				<div class="d-flex justify-content-start">
				    <div class="form-check form-check-inline">
					<% if @user[1] == "female"%>
					    <input class="form-check-input" type="radio" name="sex" id="inputSex1" value="female" checked>
					<% else %>
					    <input class="form-check-input" type="radio" name="sex" id="inputSex1" value="female">
					<% end %>
					<label class="form-check-label" for="inlineRadio1">仙女</label>
				    </div>
				    <div class="form-check form-check-inline">
					<% if @user[1] == "male"%>
					    <input class="form-check-input" type="radio" name="sex" id="inputSex2" value="male" checked>
					<% else %>
					    <input class="form-check-input" type="radio" name="sex" id="inputSex2" value="male">					    
					<% end %>
					<label class="form-check-label" for="inlineRadio2">仙子</label>
				    </div>
				</div>
			    </div>
			    <button type="submit" class="btn btn-primary">提交</button>
			</form>
		    </div>
		</div>
	    </div>
	</div>
    </div>
</div>
