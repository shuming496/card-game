<div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 col-lg-6">
	<div class="card">
	    <div class="card-header">
		<%= I18n.t('my.my_information') %>
	    </div>
	    <div class="card-body">
		<p class="card-text"><%= I18n.t('my.chanyuan_celestial')%>: <%= @user[0]%> </p>
		<p class="card-text"><%= I18n.t('my.sex') %>:
		    <% if @user[1] == "male" %>
			<%= I18n.t('form.sex')[0] %>
		    <% else %>
			<%= I18n.t('form.sex')[1] %>
		    <% end %>
		</p>
		<p class="card-text"><%= I18n.t('my.state') %>:
		    <% if @user[2] == -1 then %>
			<%= I18n.t('home.strand_by') %>
		    <% elsif @user[2] == 0 then %>
			<%= I18n.t('home.initial')%>
		    <% else %>
			<%= I18n.t('home.engaged') %>
		    <% end %>
		</p>
		<a href="/logout" class="btn btn-primary"><%= I18n.t('my.logout') %></a>		
	    </div>
	</div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 col-lg-6">
	<div id="accordion">
	    <div class="card" style="margin-bottom:77px">
		<div class="card-header" id="headingOne">
		    <h5 class="mb-0">
			<button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
			    <%= I18n.t('my.modify_information') %>
			</button>
		    </h5>
		</div>

		<% if @show_collapse %>
		    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
		<% else %>
		    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">			
		<% end %>
		    <div class="card-body">
			<form  action="/my/update" method="POST">
			    <div class="form-group">
				<input type="text" class="form-control" name="username" id="inputUsername" value="<%= @user[0]%>" aria-describedby="emailHelp" placeholder="<%= I18n.t('form.username') %>" required>
			    </div>
			    <div class="form-group">
				<input type="password" class="form-control" name="password1" id="inputPassword1" placeholder="<%= I18n.t('form.password')%>" required>
			    </div>
			    <div class="form-group">
				<input type="password" class="form-control" name="password2" id="inputPassword2" placeholder="<%= I18n.t('form.confirm_password') %>" required>
			    </div>
			    <div class="form-group">
				<div class="d-flex justify-content-start">
				    <div class="form-check form-check-inline">
					<% if @user[1] == "female"%>
					    <input class="form-check-input" type="radio" name="sex" id="inputSex1" value="female" checked>
					<% else %>
					    <input class="form-check-input" type="radio" name="sex" id="inputSex1" value="female">
					<% end %>
					<label class="form-check-label" for="inlineRadio1"><%= I18n.t('form.sex')[1] %></label>
				    </div>
				    <div class="form-check form-check-inline">
					<% if @user[1] == "male"%>
					    <input class="form-check-input" type="radio" name="sex" id="inputSex2" value="male" checked>
					<% else %>
					    <input class="form-check-input" type="radio" name="sex" id="inputSex2" value="male">					    
					<% end %>
					<label class="form-check-label" for="inlineRadio2"><%= I18n.t('form.sex')[0] %></label>
				    </div>
				</div>
			    </div>
			    <button type="submit" class="btn btn-primary"><%= I18n.t('my.submit') %></button>
			</form>
		    </div>
		</div>
	    </div>
	</div>
    </div>
</div>
