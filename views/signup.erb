<div class="row">
    <form class="form-sign" method="POST">
	<img class="mb-4" src="/images/heart.svg" alt="" width="72" height="72">
	<h1 class="h3 mb-3 font-weight-normal">注册</h1>
	<label for="inputEmail" class="sr-only">禅院草</label>
	<input type="username" id="inputUsername" name="username" class="form-control" placeholder="禅院草" style="margin-bottom: 10px" required autofocus>
	<label for="inputPassword" class="sr-only">密码</label>
	<input type="password" id="inputPassword1" name="password1" class="form-control" placeholder="密码" required>
	<label for="inputPassword" class="sr-only">密码</label>
	<input type="password" id="inputPassword2" name="password2" class="form-control" placeholder="确认密码" required>
	<select id="inputState" name="sex" class="form-control" style="margin-bottom: 10px">
	<option value="female">仙女</option>
	<option value="male" >仙子</option>
	</select>
	<button class="btn btn-primary btn-block" type="submit" style="margin-bottom:10px">注册</button>
	<a href="/signin"><button type="button" class="btn btn-primary btn-block" >登录</button></a>
    </form>
</div>
